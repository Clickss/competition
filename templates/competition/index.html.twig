{% extends 'base.html.twig' %}

{% block title %}Compétitions{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Compétitions</h1>
            </div>            
        </div>
        <div class="row justify-content-center">
            <div class="col-6 mb-2">
                <a class="btn btn-success" href="{{ path('competition_new') }}">Nouvelle compétition</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <table class="table table-hover table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for competition in competitions %}
                        <tr>
                            <td>
                                {{ competition.nom }}
                            </td>
                            <td>
                                <div class="row">
                                    <a class="btn btn-sm btn-warning mr-2" href="{{ path('competition_edit', {'id': competition.id}) }}">Éditer</a>                                
                                    <a class="btn btn-sm btn-info mr-2" href="{{ path('groupe_index', {'competition': competition.id}) }}">Afficher les groupes</a>
                                    {{ include('competition/_delete_form.html.twig') }}                                
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune compétition enregistrée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}